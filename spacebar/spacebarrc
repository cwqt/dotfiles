!/usr/bin/env sh

spacebar -m config position             top
spacebar -m config height               24
spacebar -m config title                on
spacebar -m config spaces               on
spacebar -m config clock                on
spacebar -m config power                on
spacebar -m config padding_left         20
spacebar -m config padding_right        20
spacebar -m config spacing_left         25
spacebar -m config spacing_right        15
spacebar -m config text_font           "Roboto:Regular:12.0"
spacebar -m config icon_font           "Roboto:Regular:12.0"
spacebar -m config display              all
spacebar -m config spaces_for_all_displays  on

spacebar -m config background_color     0xff0D1014
spacebar -m config foreground_color     0xffd5d5d5

spacebar -m config display_separator   on
spacebar -m config display_separator_icon 

spacebar -m config space_icon_color     0xff888780
#727169
spacebar -m config power_icon_color     0xffcd950c
spacebar -m config battery_icon_color   0xffd75f5f
spacebar -m config dnd_icon_color       0xffa8a8a8
spacebar -m config clock_icon_color     0xffa8a8a8
spacebar -m config power_icon_strip     ""
# spacebar -m config space_icon_strip     code www msg song misc 6 7 8 9 10 
# spacebar -m config space_icon_strip     一 二 三 四 五 六 七 八 九 十
spacebar -m config space_icon_strip     en to tre fem fire " " sju atte ni ti
spacebar -m config space_icon           •
spacebar -m config clock_icon           " "
spacebar -m config dnd_icon             
spacebar -m config clock_format         "%a %d %b %l:%M%p"
spacebar -m config right_shell          off
spacebar -m config right_shell_icon     " "
spacebar -m config right_shell_command  " "

spacebar -m config debug_output on

echo "spacebar configuration loaded.."
